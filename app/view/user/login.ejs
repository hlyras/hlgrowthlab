<html>

<head>
  <%- include('./../partials/head.ejs') %>
</head>

<body>
  <header class="container" style="background-color: rgb(0, 0, 0)">
    <div class="box b1 container">
      <div class="mobile-box a5 center"></div>
      <div class="mobile-box a3-5 em20 bold lucida-grande padding-3 center noselect pointer"
        style="color:rgb(225, 225, 225)" onclick="window.location.href='/'">Cotalogo</div>
      <div class="mobile-box b5 container">
        <div class="mobile-box container right padding-5">
          <% if(!user){ %>
          <div class="mobile-box lucida-grande em09 underline-link radius-5 padding-10 noselect pointer"
            style="color:#fff;" onclick="window.location.href = '/user/signup'">Signup</div>
          <% } else { %>
          <a><img class="mobile-box noselect icon size-30 padding-5"
              onclick="let r = confirm('deseja sair?');if(r==true){window.location.href='/user/logout'}"
              src="/images/icon/logout-white.png"></a>
          <% } %>
        </div>
      </div>
    </div>
  </header>

  <section class="container h-center margin-top-50 lucida-grande">
    <form action="/user/login" method="post" class="box b3 container ground margin-top-15 padding-10 h-center">
      <div class="box b1 lucida-grande em09 bold underline margin-top-10 center noselect">Preencha as informações
        de login
      </div>
      <% if (message.length > 0) { %>
      <div class="box b1 lucida-grande em09 bold center margin-top-10 padding-5 radius-5"
        style="background-color: #e32626; color:#fff;"><%= message %></div>
      <% } %>
      <input type="text" name="username" class="box b1 em11 georgia border-bottom padding-10 margin-top-5"
        maxlength="60" role="presentation" autocomplete="off" placeholder="Nome da empresa ou E-mail">
      <input type="password" name="password" class="box b1 em11 georgia border-bottom padding-10 margin-top-5"
        maxlength="45" role="presentation" autocomplete="off" placeholder="Senha">
      <input type="submit"
        class="box b1 btn-act lucida-grande em11 bold radius-5 noborder shadow-lg-st padding-10 margin-top-10 margin-bottom-5 noselect pointer"
        value="Acessar minha conta">

      <div class="box b1 underline"></div>

      <a href="/user/signup" class="box b1 lucida-grande em09 bold margin-top-5 center">Criar nova conta</a>
    </form>
  </section>
</body>
<footer>
  <%- include('./../partials/footer.ejs') %>
</footer>

</html>