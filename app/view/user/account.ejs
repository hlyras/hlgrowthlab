<html>

<head>
  <%- include('./../partials/head.ejs') %>
  <style type="text/css">
    .btn-act {
      background-color: #356ae6;
      color: #fff;
    }

    .btn-act:hover {
      background-color: #245ae5;
      color: #fff;
    }

    .image-card {
      object-fit: contain;
      width: 100%;
      height: 200px;
    }
  </style>
</head>

<body>
  <%- include('./../partials/header.ejs') %>
  <%- include('./../partials/nav.ejs') %>
  <section class="container h-center">
    <div class="box b2-3 container ground radius-5 padding-10 h-center">
      <h1 class="box b1 underline lucida-grande center">Informações da conta</h1>

      <!-- Mostrar saldo da conta -->
      <div class="box b4 container border radius-5 padding-10 margin-top-5 h-center">
        <div class="box b1 lucida-grande em09 bold center">Saldo</div>
        <div class="box b1 lucida-grande em11 bold center">R$<%= user.balance.toFixed(2) %></div>
      </div>

      <div class="box b4 container border radius-5 padding-10 margin-top-5 h-center">
        <div class="box b1 lucida-grande em09 bold center">Custo mensal</div>
        <div class="box b1 lucida-grande em11 bold center">R$32.94</div>
      </div>

      <div class="box b4 container border radius-5 padding-10 margin-top-5 h-center">
        <div class="box b1 lucida-grande em09 bold center">Catálogos</div>
        <div class="box b1 lucida-grande em11 bold center">2</div>
      </div>

      <div class="box b4 container border radius-5 padding-10 margin-top-5 h-center">
        <div class="box b1 lucida-grande em09 bold center">Imagens</div>
        <div class="box b1 lucida-grande em11 bold center">96</div>
      </div>

      <!-- Mostrar quanto custa a conta por mês -->
      <!-- <h3 class="box b1 lucida-grande center">Custo mensal: R$23.94</h3> -->
      <!-- Mostrar quantidade de catálogos ativos -->
      <!-- <h3 class="box b1 lucida-grande center">Quantidade de catálogos: 2</h3> -->
      <!-- Mostrar quantidade de imagens ativas -->
      <!-- <h3 class="box b1 lucida-grande center">Quantidade de imagens: 78</h3> -->
      <!-- Mostrar opção para realizar recarga e o valor da recarga -->

      <div id="create-cob-btn"
        class="box b2 btn-act lucida-grande bold border radius-5 margin-top-5 padding-5 center pointer"
        onclick="lib.display('create-cob-form', '');lib.display('create-cob-btn', 'none')">
        Recarregar
        Saldo
      </div>

      <form id="create-cob-form" class="box b2 container border radius-5 margin-top-5 h-center" style="display: none;">
        <div class="mobile-box b12"></div>
        <div class="mobile-box b5-6 lucida-grande bold georgia center">Realizar recarga PIX</div>
        <div class="mobile-box b12 lucida-grande bold center pointer"
          onclick="lib.display('create-cob-form', 'none');lib.display('create-cob-btn', '')">
          x
        </div>
        <div class="box b1 center">
          <img src="/images/icon/pix.png" class="image-prop width-100">
        </div>
        <input type=" number" name="cost" class="box b4 em12 input-generic center bold margin-top-5" step="0.01"
          value="0.00" onfocus="if(this.value < 0.01){this.value=''}"
          onblur="if(this.value < 0.01){this.value=parseFloat(0).toFixed(2)}" />
        <input type="submit"
          class="box b1 btn-act lucida-grande bold border radius-5 margin-top-5 padding-5 center pointer"
          value="Gerar PIX">
      </form>

    </div>
    <!-- id: 2,
    name: 'Chris Carvalho',
    business: 'Coisas de menina',
    email: 'chriscarvalho@gmail.com',
    status: 'Active',
    balance: 0 -->

  </section>
  <%- include('./../partials/loader.ejs') %>
</body>
<footer>
  <%- include('./../partials/footer.ejs') %>
</footer>

</html>