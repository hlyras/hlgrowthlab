<script>
  async function productDropdown(input) {
    let products = [];

    if (input.value.length > 1) {
      products = await Product.filter({ name: input.value });
      if (!products) { return false; }
    }

    let properties = [["code", "Código", "b4"], ["name", "Descrição", "b3-4"]];

    lib.dropdown.input(products, input, document.getElementById("product-dropdown-content"), properties);
  };
</script>