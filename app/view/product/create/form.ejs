<div id="product-create-container" class="box b2 container ground border radius-5 padding-5">
  <div class="mobile-box b10 container margin-top-2">
    <div class="mobile-box tooltip center" data-tooltip="Ajuda">
      <img class='mobile-box size-25 center icon pointer noselect' onclick="lib.display('code-help', '')"
        src="/images/icon/help.png">
    </div>
  </div>
  <div id="create-form-span" class="mobile-box b4-5 em12 lucida-grande bold center">Novo Produto</div>
  <div class="mobile-box center">
    <img id="product-create-expander" class="size-20 noselect icon" src="/images/icon/expand.png"
      onclick="lib.displayDiv('product-create-form', this, '/images/icon/expand.png', '/images/icon/retract.png');">
  </div>

  <form id="product-create-form" class="box b1 container padding-10" style="display:none;">
    <input type="hidden" name="id" value="">
    <input type="text" name="code" class="box b4 lucida-grande em12 bold border-bottom-lg-st padding-5 center nofocus"
      placeholder="SKU/Código" autocomplete="off" maxlength="10">
    <input type="text" name="name" class="box b3-4 lucida-grande em12 bold border-bottom-lg-st padding-5 center nofocus"
      placeholder="Nome do Produto" autocomplete="off" maxlength="100">

    <div class="box b1 container border-lg-st padding-10 margin-top-10 radius-5">
      <div class="box b1 container">
        <div class="mobile-box b10"></div>
        <div class="mobile-box b4-5 lucida-grande bold center noselect">Categorias e variações</div>
        <div class="mobile-box b10 center"><img class="size-20 icon noselect" src="/images/icon/expand.png"
            onclick="lib.displayDiv('create-variation-box', this, '/images/icon/expand.png', '/images/icon/retract.png');">
        </div>
      </div>
      <div id="create-variation-box" class="box a1 container" style="display:none;">
        <% for(let i in categories) { %>
        <% if(categories[i].variations) { %>
        <div class="box b1 container margin-top-10 border-lg-st radius-5 padding-1">
          <div class="mobile-box a2 lucida-grande em08 bold v-center padding-5"><%= categories[i].name %></div>
          <select name="category<%= categories[i].id %>" class="mobille-box a2 input-generic radius-5 center">
            <option selected value="">Não incluir</option>
            <% for(let j in categories[i].variations) { %>
            <option value="<%= categories[i].variations[j].id %>"><%= categories[i].variations[j].name %></option>
            <% } %>
          </select>
        </div>
        <% } %>
        <% } %>
      </div>
    </div>

    <%- include('./image/box.ejs') %>
    <%- include('./image/upload-box.ejs') %>

    <div class="box b1 lucida-grande em08 bold margin-top-10">Descrição</div>
    <textarea name="description" class="box b1 height-80 avant-garde border-lg-st padding-5 radius-5 nofocus"
      placeholder="Descrição do Produto"></textarea>

    <input type="submit" name="submit"
      class="box b3 em10 bold btn-act noborder height-50 center margin-top-20 radius-5 pointer"
      value="Cadastrar produto">
  </form>
</div>